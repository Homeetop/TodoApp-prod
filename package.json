{
  "name": "topz-todo-app",
  "version": "0.0.3",
  "main": "public/electron.js",
  "author": "topsoft",
  "description": "A simple todo app",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "start:nodemon": "nodemon --watch public/electron.js --exec npm start",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "electron-build": "electron-builder",
    "publish": "npm run react-build && electron-builder -p always",
    "build": "npm run react-build && npm run electron-build",
    "build:publish": "npm run build && npm run publish",
    "electron-start": "electron .",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": " electron-builder --win --x64"
  },
  "build": {
    "appId": "com.topsoft.topz-todo-app",
    "files": [
      "build/**/**",
      "db/**/**",
      "assets/**/*",
      "node_modules/**/**",
      "!publisher.json",
      "!README.md",
      "!updates.json",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "private": true,
        "owner": "Homeetop",
        "repo": "TodoApp-prod-",
        "token": "<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>"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "./db",
        "to": "db/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/todoAppLogo.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 810,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/todoAppLogo.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/todoAppLogo.png",
      "category": "Development",
      "maintainer": "cloud.omnix@gmail.com"
    }
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/Homeetop/TodoAppUpdate-server/main/updates/linux-x64-prod.json"
  },
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-simple-updater": "^2.0.11",
    "electron-updater": "^5.0.5",
    "framer-motion": "^6.2.6",
    "nodemon": "^2.0.16",
    "postinstall": "^0.7.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "react-toastify": "^8.1.1",
    "sqlite3": "^5.0.2",
    "uuid": "^8.3.2",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3",
    "electron-simple-publisher": "^2.0.1"
  }
}
